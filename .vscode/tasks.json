{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++ Build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++20",         // or c++17, etc.
        "${file}",            // compile the current file
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build the currently open C++ source file"
    },
    {
      "label": "C++ Run",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "dependsOn": "Build current file", // ensures it's built first
      "group": "none",
      "problemMatcher": []
    }
  ]
}
